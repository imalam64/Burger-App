<div class="jumbotron mb-3">
    <img src="/assets/img/4-drib-cindysuen-transparent-pikachu-burger.gif">
</div>

<div class="container mb-3">
    <div class="row">
        <div class="col-md-6 border">
        <h3> Burgers that are ready to be munched on! </h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                    <li>
                        {{burger_name}}
                        <button class="change-devour" data-id="{{id}}" data-devour="{{devoured}}">
                            CHOMP CHOMP
                        </button>
                    </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6 border">
        <h3> Burgers that are completely devoured! </h3>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>
                            {{burger_name}}
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
</div>

<div class="container border">
    <div>
        <h3> Add a Burger Here! </h3>
        <form class="create-form">

        <div class="form-group">
            <label for="burg">Burger Name:</label>
            <input type="text" id="burg" name="name">
        </div>

        <button type="submit">NOM NOM NOM!</button>
        </form>
    </div>
</div>